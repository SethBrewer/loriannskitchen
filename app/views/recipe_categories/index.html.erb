<h1>Listing recipe_categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for recipe_category in @recipe_categories %>
  <tr>
    <td><%=h recipe_category.name %></td>
    <td><%=h recipe_category.description %></td>
    <td><%= link_to 'Show', recipe_category %></td>
    <td><%= link_to 'Edit', edit_recipe_category_path(recipe_category) %></td>
    <td><%= link_to 'Destroy', recipe_category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New recipe_category', new_recipe_category_path %>
