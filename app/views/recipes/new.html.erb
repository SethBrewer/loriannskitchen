<h1>New recipe</h1>

<% form_for(@recipe) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
	<p><label for="recipe_course">Course</label><br />
	<%= select("recipe", "course", RecipeCourses.ListOfRecipeCourses, {:prompt => "Select"}) %>
  </p>
  <p>
    <%= f.label :recipe_category_id %><br />
    <%= collection_select :recipe, :recipe_category_id, RecipeCategory.find(:all), :id, :name, {:prompt => "Select"} %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', recipes_path %>
