<h1>Listing meals</h1>

<table>
  <tr>
    <th>Date and time</th>
    <th>Price for small</th>
    <th>Price for large</th>
    <th>Price for special</th>
  </tr>

<% for meal in @meals %>
  <tr>
    <td><%=h meal.date_and_time %></td>
    <td><%=h meal.price_for_small %></td>
    <td><%=h meal.price_for_large %></td>
    <td><%=h meal.price_for_special %></td>
    <td><%= link_to 'Show', meal %></td>
    <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
    <td><%= link_to 'Destroy', meal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

